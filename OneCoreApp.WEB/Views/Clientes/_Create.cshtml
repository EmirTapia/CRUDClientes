@model OneCore.API.Models.Cliente

<form asp-action="Create" asp-controller="Clientes">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label" hidden></label>
        <input asp-for="Id" class="form-control" hidden />
        <span asp-validation-for="Id" class="text-danger" hidden></span>
    </div>
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre Completo*</label>
        <input asp-for="Nombre" class="form-control" required/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rfc" class="control-label">Registro Federal de Contribuyentes*</label>
        <input asp-for="Rfc" class="form-control" required/>
        <span asp-validation-for="Rfc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Direccion" class="control-label">Direccion*</label>
        <input asp-for="Direccion" class="form-control" required/>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cp" class="control-label">Codigo Postal*</label>
        <input asp-for="Cp" class="form-control" required/>
        <span asp-validation-for="Cp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CorreoContacto" class="control-label">Correo de contacto*</label>
        <input asp-for="CorreoContacto" class="form-control" required/>
        <span asp-validation-for="CorreoContacto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary form-control" />
    </div>
</form>