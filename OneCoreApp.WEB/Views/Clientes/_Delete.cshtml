@model OneCore.API.Models.Cliente

<h3>Estas seguro de eliminar este cliente?</h3>

<form asp-action="Delete" asp-controller="Clientes">
    <input asp-for="Id" hidden />
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Nombre): @Model.Nombre
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Rfc): @Model.Rfc
    </div>
    <input type="submit" value="Delete" class="btn btn-danger form-control" />
</form>

